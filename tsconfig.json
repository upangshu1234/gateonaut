{
  "compilerOptions": {
    "target": "ES2022",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "module": "ESNext",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "types": ["node"],
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "moduleDetection": "force",
    "allowJs": true,
    "jsx": "react-jsx",

    "baseUrl": ".",                       // âœ… REQUIRED
    "paths": {
      "@/*": ["src/*"]
    },

    "noEmit": true,
    "strict": true
  },
  "include": ["src", "vite-env.d.ts"]
}
